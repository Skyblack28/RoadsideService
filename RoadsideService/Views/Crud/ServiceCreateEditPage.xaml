<Page x:Class="RoadsideService.Views.Crud.ServiceCreateEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RoadsideService.Views.Crud"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServiceCreateEditPage">

    <Grid Margin="10">


        <StackPanel Margin="10" HorizontalAlignment="Center"  VerticalAlignment="Center" Grid.Column="0">
            <Label Content="Название услуги:"/>
            <TextBox x:Name="ServiceNameTextBox" Width="250"/>

            <Label Content="Описание:"/>
            <TextBox x:Name="DescriptionTextBox"/>

            <Label Content="Цена:"/>
            <TextBox x:Name="PriceTextBox"/>

            <Label Content="Длительность (мин):"/>
            <TextBox x:Name="DurationTextBox"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="SaveButton" Content="Сохранить" Width="100" HorizontalAlignment="Left" Click="SaveButton_Click" Margin="0,5,5,0"/>
            <Button x:Name="CancelButton" Content="Отмена" Width="100" HorizontalAlignment="Left" Click="CancelButton_Click" Margin="5,5,0,0"/>
        </StackPanel>
    </Grid>
</Page>