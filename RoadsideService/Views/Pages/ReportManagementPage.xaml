<Page x:Class="RoadsideService.Views.Pages.ReportManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RoadsideService.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportManagementPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Content="Доходы от мотеля" Width="200" Click="BookingRevenueReportButton_Click" Margin="5"/>
            <Button Content="Доходы от автосервиса" Width="200" Click="ServiceRevenueReportButton_Click" Margin="5"/>
            <Button Content="Загрузка комнат" Width="200" Click="RoomOccupancyReportButton_Click" Margin="5"/>
        </StackPanel>

        <Frame x:Name="ReportFrame" Grid.Row="1"/>
    </Grid>
</Page>
