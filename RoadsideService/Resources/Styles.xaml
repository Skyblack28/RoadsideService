    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

    <!--coloors-->
    <ImageBrush x:Key="BackgroundBrush" ImageSource="{Binding SelectedImage}" Stretch="UniformToFill"/>
   
    <SolidColorBrush x:Key="ColorViolet" Color="#9496EC"/>
