    <Style x:Key="GenderTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
        <Setter Property="Text" Value="{Binding Gender, StringFormat='Пол: {0}'}"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding Gender}" Value="M">
                <Setter Property="Text" Value="Пол: мужской"/>
